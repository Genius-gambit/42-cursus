NAME = span

RED = "\033[3;36m"

SRCS = main.cpp Span.cpp

OBJS = ${SRCS:%.cpp=%.o}

CXX = c++ -std=c++98

CXXFLAGS = -Wall -Wextra -Werror

${NAME}:${OBJS}
		${CXX} ${CXXFLAGS} ${OBJS} -o ${NAME}
	@echo ${RED}"                  ██████╗██████╗ ██████╗     ███╗   ███╗ ██████╗ ██████╗ ██╗   ██╗██╗     ███████╗"
	@echo "                 ██╔════╝██╔══██╗██╔══██╗    ████╗ ████║██╔═══██╗██╔══██╗██║   ██║██║     ██╔════╝"
	@echo "                 ██║     ██████╔╝██████╔╝    ██╔████╔██║██║   ██║██║  ██║██║   ██║██║     █████╗  "
	@echo "                 ██║     ██╔═══╝ ██╔═══╝     ██║╚██╔╝██║██║   ██║██║  ██║██║   ██║██║     ██╔══╝  "
	@echo "                 ╚██████╗██║     ██║         ██║ ╚═╝ ██║╚██████╔╝██████╔╝╚██████╔╝███████╗███████╗"
	@echo "                  ╚═════╝╚═╝     ╚═╝         ╚═╝     ╚═╝ ╚═════╝ ╚═════╝  ╚═════╝ ╚══════╝╚══════╝"
	@echo "                                              ██████╗  █████╗ "
	@echo "                                             ██╔═████╗██╔══██╗"
	@echo "                                             ██║██╔██║╚█████╔╝"
