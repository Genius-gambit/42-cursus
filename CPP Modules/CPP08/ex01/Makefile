	@echo "                                             ╚██████╔╝╚█████╔╝"
	@echo "                                              ╚═════╝  ╚════╝ "

all:	${NAME}

clean:	
		rm -rf ${OBJS}

fclean:	clean
		rm -rf ${NAME}

re:		fclean all