NAME = array

RED = "\033[3;31m"

SRCS = main.cpp

OBJS = ${SRCS:%.cpp=%.o}

CXX = c++ -std=c++98

CXXFLAGS = -Wall -Wextra -Werror

${NAME}:${OBJS}
		${CXX} ${CXXFLAGS} ${OBJS} -o ${NAME}
	@echo ${RED}"                  ██████╗██████╗ ██████╗     ███╗   ███╗ ██████╗ ██████╗ ██╗   ██╗██╗     ███████╗"
	@echo "                 ██╔════╝██╔══██╗██╔══██╗    ████╗ ████║██╔═══██╗██╔══██╗██║   ██║██║     ██╔════╝"
	@echo "                 ██║     ██████╔╝██████╔╝    ██╔████╔██║██║   ██║██║  ██║██║   ██║██║     █████╗  "
	@echo "                 ██║     ██╔═══╝ ██╔═══╝     ██║╚██╔╝██║██║   ██║██║  ██║██║   ██║██║     ██╔══╝  "
	@echo "                 ╚██████╗██║     ██║         ██║ ╚═╝ ██║╚██████╔╝██████╔╝╚██████╔╝███████╗███████╗"
	@echo "                  ╚═════╝╚═╝     ╚═╝         ╚═╝     ╚═╝ ╚═════╝ ╚═════╝  ╚═════╝ ╚══════╝╚══════╝"
	@echo "                                              ██████╗ ███████╗"
	@echo "                                             ██╔═████╗╚════██║"
	@echo "                                             ██║██╔██║    ██╔╝"
